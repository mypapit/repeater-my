<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    >

   <RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
     >

    <TextView
        android:id="@+id/tvNearbyHamCallsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dip"
        android:text="9W2WTF"
        android:textSize="22sp"
        android:textColor="@color/text_color"
        />

    

    <TextView
        android:id="@+id/tvNearbyHamHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNearbyHamCallsign"
        android:layout_below="@+id/tvNearbyHamCallsign"
        android:text="Mohammad Hafiz Ismail" />

    
    <TextView
        android:id="@+id/tvNearbyActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dip"
        android:layout_below="@+id/tvNearbyHamLastSeen"
        android:layout_alignParentRight="true"
        android:text="13.5 km" />

    <TextView
        android:id="@+id/tvNearbyHamLastSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvNearbyHamCallsign"
        android:layout_alignBottom="@+id/tvNearbyHamCallsign"
        
        android:layout_alignParentRight="true"
        android:text="3 hours ago" 
        android:textStyle="bold"
        android:layout_marginRight="12dip"
        />

    <TextView
        android:id="@+id/tvNearbyHamValid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvNearbyActive"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@+id/tvNearbyActive"
        android:text=""
        android:textColor="@color/bright_yellow"
        android:textStyle="italic" />

</RelativeLayout>
</LinearLayout>