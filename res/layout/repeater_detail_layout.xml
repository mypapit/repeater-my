<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingTop="10dip"
    >

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeater Callsign"
        android:textStyle="bold"
        android:layout_marginLeft="10dip"
       
        
         android:textColor="@color/holo_blue"
        android:paddingBottom="3dip"
        
       />

    <View style="@style/Divider"/>

    <TextView
        android:id="@+id/tvdCallsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9M2RKG" 
        android:layout_marginLeft="10dip"
        android:textSize="20dp"
        android:textColor="@color/text_color"
        android:paddingBottom="6dip"
        
        
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Downlink Frequency"
        android:textStyle="bold"
        android:layout_marginLeft="10dip"
       
        android:paddingBottom="3dip"
        android:textColor="@color/holo_blue"
       />

    <View style="@style/Divider"/>
     <TextView
        android:id="@+id/tvdFreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="145.525 MHz" 
        android:layout_marginLeft="10dip"
        android:textSize="20dp"
        
        android:paddingBottom="6dip"
        
        
        />
     
      <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shift"
        android:textStyle="bold"
        android:layout_marginLeft="10dip"
       
        android:paddingBottom="3dip"
        android:textColor="@color/holo_blue"
       />

    <View style="@style/Divider"/>
    
     <TextView
        android:id="@+id/tvdShift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-0.600 MHz" 
        android:layout_marginLeft="10dip"
        android:textSize="20dp"
        
        android:paddingBottom="6dip"
        
        
        />
     
       <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tone"
        android:textStyle="bold"
        android:layout_marginLeft="10dip"
       
        android:paddingBottom="3dip"
        android:textColor="@color/holo_blue"
       />

    <View style="@style/Divider"/>
     <TextView
        android:id="@+id/tvdTone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="103.5 Hz" 
        android:layout_marginLeft="10dip"
        android:textSize="20dp"
        
        android:paddingBottom="6dip"
        
        
        />
     
     
       <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Club"
        android:textStyle="bold"
        android:layout_marginLeft="10dip"
       
        android:paddingBottom="3dip"
        android:textColor="@color/holo_blue"
       />

    <View style="@style/Divider"/>
    
     <TextView
        android:id="@+id/tvdClub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KSARC" 
        android:layout_marginLeft="10dip"
        android:textSize="20dp"
        
        android:paddingBottom="6dip"
        
        
        />
     
       <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:layout_marginLeft="10dip"
       
        android:paddingBottom="3dip"
        android:textColor="@color/holo_blue"
       />

    <View style="@style/Divider"/>
    
        <TextView
        android:id="@+id/tvdLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gunung Kriang" 
        android:layout_marginLeft="10dip"
        android:textSize="20dp"
        
        android:paddingBottom="6dip"
        
        
        />
    
         <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textStyle="bold"
        android:layout_marginLeft="10dip"
       
        android:paddingBottom="3dip"
        android:textColor="@color/holo_blue"
       />

    <View style="@style/Divider"/>
    
        <TextView
        android:id="@+id/tvdDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45.05 km"
        android:layout_marginLeft="10dip"
        android:textSize="20dp"
        
        android:paddingBottom="6dip"
        
        
        />
    
</LinearLayout>